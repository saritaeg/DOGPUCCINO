<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="700" stylesheets="@EstiloTramitarCita.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">

<VBox styleClass="header" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

    <HBox alignment="CENTER_LEFT" prefHeight="89.0" prefWidth="679.0" spacing="10" styleClass="top-bar"
          xmlns:fx="http://javafx.com/fxml">
        <Button styleClass="back-button" text="←" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label prefWidth="234.0" styleClass="title" text="DOGPUCCINO" />
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    <StackPane prefHeight="40.0" prefWidth="670.0" style="-fx-padding: 15 0 20 0;">
        <Button fx:id="addDogButton" text="TRAMITAR CITA" />
    </StackPane>
</VBox>
    <AnchorPane prefHeight="300.0" prefWidth="700.0" AnchorPane.topAnchor="130.0">
        <VBox alignment="CENTER" spacing="15.0" layoutX="50.0" layoutY="100.0" prefWidth="600.0" styleClass="dog-card">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <ImageView fitHeight="60.0" fitWidth="60.0">
                    <image>
                        <Image url="@imagenes/img1.png" />
                    </image>
                </ImageView>
                <Label text="KIRA" styleClass="dog-name"/>
                <Label text="(11 años)" styleClass="dog-age"/>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Button text="DONACIÓN" styleClass="donation-button"/>
                    <Label text="(mínimo 3€)" styleClass="donation-note"/>
                </VBox>
            </HBox>

            <HBox spacing="20.0" alignment="CENTER">
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="FECHA PARA LA CITA" styleClass="form-label"/>
                    <DatePicker fx:id="fechaCitaPicker" styleClass="form-picker"/>
                </VBox>
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="HORA PARA LA CITA" styleClass="form-label"/>
                    <ChoiceBox fx:id="horaCitaChoiceBox" styleClass="form-picker"/>
                    <Label text="(Duración de 1h)" styleClass="duration-note"/>
                </VBox>
            </HBox>

            <Button text="SOLICITAR CITA" styleClass="submit-button"/>
        </VBox>
    </AnchorPane>


</AnchorPane>

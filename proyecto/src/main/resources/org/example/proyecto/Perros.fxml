<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="460.0" prefWidth="679.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@Perros.css">

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" prefHeight="89.0" prefWidth="679.0" spacing="10" styleClass="top-bar">
                <Button styleClass="back-button" text="←" />
                <Label prefWidth="234.0" styleClass="title" text="DOGPUCCINO" />
            </HBox>

            <HBox alignment="CENTER" spacing="15" styleClass="tabs-bar">
                <ToggleButton selected="true" styleClass="tab-button" text="_Perros" />
                <ToggleButton styleClass="tab-button" text="Notificaciones" />
                <ToggleButton styleClass="tab-button" text="Citas" />
                <ToggleButton prefWidth="110.0" styleClass="tab-button" text="Sobre nosotros" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="20" styleClass="dog-list-container">
            <Button styleClass="nav-button" text="❮" />

            <!-- Dog Card 1 -->
            <VBox prefHeight="334.0" prefWidth="236.0" spacing="10" styleClass="dog-card">
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@dog1.png" />
                    </image>
                </ImageView>
                <GridPane hgap="5" vgap="5">
                    <Label text="Nombre:" GridPane.columnIndex="0" />
                    <TextField GridPane.columnIndex="1" />

                    <Label text="Raza:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Fecha nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Adoptado:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Protectora:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
                <Button styleClass="info-button" text="MÁS INFORMACIÓN" />
            </VBox>

            <!-- Dog Card 2 -->
            <VBox prefHeight="334.0" prefWidth="235.0" spacing="10" styleClass="dog-card">
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@dog2.png" />
                    </image>
                </ImageView>
                <GridPane hgap="5" vgap="5">
                    <Label text="Nombre:" GridPane.columnIndex="0" />
                    <TextField GridPane.columnIndex="1" />

                    <Label text="Raza:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Fecha nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Adoptado:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Protectora:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
                <Button styleClass="info-button" text="MÁS INFORMACIÓN" />
            </VBox>

            <Button styleClass="nav-button" text="❯" />
        </HBox>
    </center>
</BorderPane>

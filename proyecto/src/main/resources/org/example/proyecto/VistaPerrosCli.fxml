<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="460.0" prefWidth="679.0" stylesheets="@EstiloMenu.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.controlador.PerrosCliControlador">

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" prefHeight="89.0" prefWidth="679.0" spacing="10" styleClass="top-bar" xmlns:fx="http://javafx.com/fxml">
                <Button fx:id="btnVolverInicio" onAction="#btnVolverInicio" styleClass="back-button" text="←" />
                <Region HBox.hgrow="ALWAYS" />
                <Label prefWidth="234.0" styleClass="title" text="DOGPUCCINO" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnEditarPerfilCliente" mnemonicParsing="false" onAction="#btnEditarPerfilCliente" prefHeight="23.0" prefWidth="113.0" styleClass="tab-button" text="Editar Perfil">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image>
                                <Image url="@../../../imagenes/usuario.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <HBox alignment="CENTER" spacing="15" styleClass="tabs-bar">
                <Button fx:id="btnPerrosCliente" onAction="#btnPerrosCliente" style="-fx-font-weight: bold;" styleClass="tab-button" text="_Perros" />
                <Button fx:id="btnNotificacionesCliente" onAction="#btnNotificacionesCliente" styleClass="tab-button" text="Notificaciones" />
                <Button fx:id="btnCitasCliente" onAction="#btnCitasCliente" styleClass="tab-button" text="Citas" />
                <Button fx:id="btnNosotrosCliente" onAction="#btnNosotrosCliente" prefWidth="110.0" styleClass="tab-button" text="Sobre nosotros" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="20" styleClass="dog-list-container">
            <Button fx:id="btnMasPerrosCliente" onAction="#btnMasPerrosCliente" styleClass="nav-button" text="❮" />

            <VBox prefHeight="334.0" prefWidth="236.0" spacing="10" styleClass="dog-card">
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@dog1.png" />
                    </image>
                </ImageView>
                <GridPane hgap="5" vgap="5">
                    <Label text="Nombre:" GridPane.columnIndex="0" />
                    <TextField fx:id="txtNombreCli" GridPane.columnIndex="1" />

                    <Label text="Raza:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtRazaCli" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtSexoCli" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Fecha nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtFechaNacimientoCli" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Adoptado:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="txtAdoptadoCli" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Protectora:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtProtectoraCli" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
                <Button fx:id="btnMasInformacion" onAction="#btnMasInformacion" styleClass="info-button" text="MÁS INFORMACIÓN" />
            </VBox>

            <VBox prefHeight="334.0" prefWidth="235.0" spacing="10" styleClass="dog-card">
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@dog2.png" />
                    </image>
                </ImageView>
                <GridPane hgap="5" vgap="5">
                    <Label text="Nombre:" GridPane.columnIndex="0" />
                    <TextField fx:id="txtNombreCli2" GridPane.columnIndex="1" />

                    <Label text="Raza:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtRazaCli2" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtSexoCli2" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Fecha nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtFechaNacimientoCli2" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Adoptado:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="txtAdoptadoCli2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Protectora:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtProtectoraCli2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <Button fx:id="btnMasInformacion2" onAction="#btnMasInformacion2" styleClass="info-button" text="MÁS INFORMACIÓN" />
            </VBox>

            <Button fx:id="btnMasPerroCliente2" onAction="#btnMasPerroCliente2" styleClass="nav-button" text="❯" />
        </HBox>
    </center>
</BorderPane>
